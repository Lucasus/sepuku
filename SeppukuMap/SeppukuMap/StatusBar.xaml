<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="SeppukuMap.StatusBar"
	d:DesignWidth="640" d:DesignHeight="480" Width="350" Height="40">

	<Grid x:Name="LayoutRoot">
		<TextBlock HorizontalAlignment="Left" Margin="2,2,0,0" VerticalAlignment="Top" Text="Hint:" TextWrapping="Wrap" d:LayoutOverrides="VerticalAlignment"/>
		<TextBlock x:Name="HintBox" HorizontalAlignment="Left" Margin="34,2,0,0" VerticalAlignment="Top" Text="TextBlock" TextWrapping="Wrap" d:LayoutOverrides="VerticalAlignment"/>
		<TextBlock HorizontalAlignment="Left" Margin="2,0,0,2" VerticalAlignment="Bottom" Text="LastLog:" TextWrapping="Wrap" d:LayoutOverrides="VerticalAlignment"/>
		<TextBlock x:Name="LogBox" HorizontalAlignment="Left" Margin="53,0,0,2" VerticalAlignment="Bottom" Text="TextBlock" TextWrapping="Wrap" d:LayoutOverrides="VerticalAlignment"/>
	</Grid>
</UserControl>