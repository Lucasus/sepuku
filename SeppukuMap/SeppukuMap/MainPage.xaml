<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" xmlns:local="clr-namespace:SeppukuMap" x:Class="SeppukuMap.MainPage"
    d:DesignWidth="640" d:DesignHeight="480" Width="450" Height="700">
  <Canvas x:Name="LayoutRoot">
  	<Rectangle Stroke="Black" Height="700" Width="450" RadiusX="15" RadiusY="15" StrokeThickness="3" Fill="White" d:IsLocked="True"/>
  	<local:SeppukuMapScroll x:Name="MapWithScroll" Canvas.Top="16" d:LayoutOverrides="Width, Height" ScrollSpeed="20"/>
  	<local:InfoPanel x:Name="InfoPanel" Canvas.Left="0" Canvas.Top="480" d:LayoutOverrides="Width, Height"/>
  	<Rectangle Stroke="Black" StrokeThickness="3" RadiusX="15" RadiusY="15" Height="700" Width="450" d:IsLocked="True"/>
  </Canvas>
</UserControl>
