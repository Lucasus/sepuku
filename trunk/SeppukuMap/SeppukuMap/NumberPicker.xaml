<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="SeppukuMap.NumberPicker"
	d:DesignWidth="105" d:DesignHeight="39.5" Height="20" Width="40">

	<Canvas x:Name="LayoutRoot">
		<Button x:Name="AddButton" Width="20" Content="+" Height="10" Canvas.Left="20"/>
		<Button x:Name="RemoveButton" Width="20" Content="-" Height="10" Canvas.Left="20" Canvas.Top="10" d:LayoutOverrides="VerticalAlignment"/>
		<TextBlock x:Name="numberValue" Text="0" TextWrapping="Wrap" Height="16" Width="20" Canvas.Left="0" Canvas.Top="2"/>
	</Canvas>
</UserControl>