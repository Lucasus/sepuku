<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="SeppukuMap.StatusBar"
	d:DesignWidth="640" d:DesignHeight="480" Width="700" Height="50">

	<Grid x:Name="LayoutRoot">
		<TextBlock HorizontalAlignment="Left" Margin="8,8,0,0" VerticalAlignment="Top" Text="Hint:" TextWrapping="Wrap"/>
		<TextBlock x:Name="HintBox" HorizontalAlignment="Left" Margin="40,8,0,0" VerticalAlignment="Top" Text="TextBlock" TextWrapping="Wrap"/>
		<TextBlock HorizontalAlignment="Left" Margin="8,0,0,8" VerticalAlignment="Bottom" Text="LastLog:" TextWrapping="Wrap"/>
		<TextBlock x:Name="LogBox" HorizontalAlignment="Left" Margin="59,0,0,8" VerticalAlignment="Bottom" Text="TextBlock" TextWrapping="Wrap"/>
	</Grid>
</UserControl>